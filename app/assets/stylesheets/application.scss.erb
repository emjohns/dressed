 @import "bootstrap-sprockets";
 @import "bootstrap";

p {
  margin: 5px;
}

 #hometron {
   position: relative;
   background-size: cover;
   min-height: 75vh;
   margin-top: 5vh;
   background-color: rgba(255, 255, 255, 0.8);
 }

#abouttron {
  background-color: rgba(255, 255, 255, 0.8);
  position: relative;
}

 #smalltron {
   padding-top: 1px;
   padding-bottom: 1px;
   font-family: serif;
   background-image: url(<%= asset_path("alexandra-gorn-260989.jpg") %>);
   box-shadow: inset 0 0 0 100px rgba(255, 255, 255, 0.5);
   background-size: cover;
   background-position: center;
 }

 #video iframe {
   opacity: 1 !important;
 }

 #brand {
   padding: 0 !important;
   border-radius: 20%;
   margin: 0 !important;
   text-align: center;

 }

 .navbar {
   padding: 0;
   display: flex !important;
 }

h1 {
  font-family: 'Syncopate' !important;
}

body {
  font-family: 'Jaldi';
  padding-bottom: 20px;
}
