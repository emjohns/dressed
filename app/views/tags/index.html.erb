<p id="notice"><%= notice %></p>

<div class="jumbotron" id="smalltron">
<h1 class="text-right"><em>Item Tags</em></h1>
</div>

<%= link_to 'New Tag', new_tag_path, class:"btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
